{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": ["es2020"],
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"removeComments": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noImplicitAny": true
	},
	"include": ["src"]
}

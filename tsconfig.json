{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"outDir": "out",
		"lib": ["es6", "esnext", "DOM"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"removeComments": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"pretty": true
	},
	"exclude": ["node_modules", ".vscode-test"]
}

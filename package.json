{
	"name": "npm-bumper",
	"displayName": "npm Bumper",
	"description": "VSCode extension to automatically bump dependency versions in package.json.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:npm-bumper.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "npm-bumper.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "1.48.0",
		"@types/glob": "7.1.3",
		"@types/mocha": "7.0.2",
		"@types/node": "13.13.15",
		"eslint": "7.7.0",
		"@typescript-eslint/parser": "2.34.0",
		"@typescript-eslint/eslint-plugin": "2.34.0",
		"glob": "7.1.6",
		"mocha": "7.2.0",
		"typescript": "3.9.7",
		"vscode-test": "1.4.0"
	}
}

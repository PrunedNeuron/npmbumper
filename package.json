{
	"name": "npm-bumper",
	"displayName": "npm Bumper",
	"description": "VSCode extension to automatically bump dependency versions in package.json.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/package.json",
		"onCommand:npm-bumper.bump"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "npm-bumper.bump",
				"title": "Bump dependencies"
			},
			{
				"command": "npm-bumper.undo",
				"title": "Undo bumping dependencies"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js",
		"pack": "vsce package -o release/",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/glob": "7.1.3",
		"@types/mocha": "8.0.3",
		"@types/node": "14.6.2",
		"@types/prettier": "^2.1.0",
		"@types/vscode": "1.48.0",
		"@typescript-eslint/eslint-plugin": "3.10.1",
		"@typescript-eslint/parser": "3.10.1",
		"eslint": "7.7.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-no-secrets": "^0.6.8",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-regexp": "^0.1.1",
		"eslint-plugin-simple-import-sort": "^5.0.3",
		"eslint-plugin-sonarjs": "^0.5.0",
		"glob": "7.1.6",
		"mocha": "8.1.3",
		"terser-webpack-plugin": "^4.1.0",
		"typescript": "4.0.2",
		"vscode-test": "1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"axios": "^0.20.0",
		"prettier": "^2.1.1"
	}
}

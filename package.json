{
	"name": "npm-bumper",
	"displayName": "Dependency Bumper",
	"description": "VSCode extension to automatically bump dependency versions in package.json.",
	"icon": "assets/images/icon.png",
	"author": {
		"name": "ayush",
		"email": "am@ayushm.dev",
		"url": "https://ayushm.dev"
	},
	"publisher": "ayushm",
	"repository": {
		"type": "git",
		"url": "https://github.com/PrunedNeuron/npmbumper.git"
	},
	"version": "1.1.1",
	"private": "true",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"tags": [
		"npm",
		"bump",
		"dependencies",
		"upgrade",
		"update",
		"dependency"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "npm-bumper.bump",
				"title": "Bump dependencies"
			},
			{
				"command": "npm-bumper.undo",
				"title": "Undo bumping dependencies"
			}
		]
	},
	"activationEvents": [
		"workspaceContains:package.json",
		"onCommand:npm-bumper.bump",
		"onCommand:npm-bumper.undo"
	],
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js",
		"pack": "vsce package -o release/",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/exec": "^5.0.0",
		"@semantic-release/git": "^9.0.0",
		"@types/glob": "7.1.3",
		"@types/mocha": "8.2.2",
		"@types/node": "14.17.0",
		"@types/prettier": "^2.1.0",
		"@types/vscode": "1.56.0",
		"@types/webpack-env": "^1.15.2",
		"@typescript-eslint/eslint-plugin": "4.24.0",
		"@typescript-eslint/parser": "4.24.0",
		"eslint": "7.27.0",
		"eslint-config-prettier": "^8.0.0",
		"eslint-plugin-no-secrets": "^0.8.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-regexp": "^0.10.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-sonarjs": "^0.7.0",
		"glob": "7.1.7",
		"mocha": "8.4.0",
		"prettier": "^2.1.1",
		"semantic-release": "^17.1.1",
		"semantic-release-vsce": "^3.0.1",
		"terser-webpack-plugin": "^5.0.0",
		"ts-loader": "^9.0.0",
		"typescript": "4.2.4",
		"vscode-test": "1.5.2",
		"webpack": "^5.0.0",
		"webpack-cli": "^4.0.0"
	},
	"dependencies": {
		"axios": "^0.21.0"
	}
}
